{
  "tasks": {
    "start": "deno run -A --watch=static/,routes/,islands/ dev.ts",
    "build": "deno run --allow-net --allow-read --allow-env --allow-write --allow-import dev.ts build",
    "preview": "deno run --allow-net --allow-read --allow-env --allow-write --allow-import main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update ."
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 100,
      "singleQuote": true
    }
  }
}
