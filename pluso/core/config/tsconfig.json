{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "deno.window"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./*"],
      "$fresh/*": ["./deps/fresh/*"],
      "@preact/signals": ["./deps/signals"],
      "@preact/signals-core": ["./deps/signals-core"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "_fresh"
  ]
}
